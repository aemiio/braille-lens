<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light/Default Theme -->
    <style name="Theme.BrailleLens" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/dark_orange</item>
        <item name="colorPrimaryVariant">@color/dark_olive</item>
        <item name="colorOnPrimary">@color/font_white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/dark_teal</item>
        <item name="colorSecondaryVariant">@color/pastel_teal</item>
        <item name="colorOnSecondary">@color/font_white</item>

        <!-- Accent colors -->
        <item name="colorAccent">@color/accent_red</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/dark_olive</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_grey</item>
        <item name="colorSurface">@color/light_cream</item>
        <item name="colorOnSurface">@color/font_black</item>
        <item name="colorOnBackground">@color/font_black</item>

        <!-- Additional custom attributes for specific components -->
        <item name="elevationOverlayColor">@color/pastel_orange</item>
        <item name="colorError">@color/accent_purple</item>
        <item name="colorOnError">@color/font_white</item>
    </style>
    <!-- Splash -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>